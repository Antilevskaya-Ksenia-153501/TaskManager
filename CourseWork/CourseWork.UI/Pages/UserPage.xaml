<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourseWork.UI.Pages.UserPage"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False"
             Loaded="onLoaded"
             Title="UserPage">
    
    <VerticalStackLayout>
        <Image x:Name="image" HeightRequest="400" WidthRequest="400" HorizontalOptions="Center"/>
        <Label x:Name="nameLabel" HorizontalOptions="Center"/>
        <Label x:Name="emailLabel" HorizontalOptions="Center"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Change photo" Command="{Binding ChangePhotoCommand}"/>
            <Button Text="Delete account" Command="{Binding DeleteCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>