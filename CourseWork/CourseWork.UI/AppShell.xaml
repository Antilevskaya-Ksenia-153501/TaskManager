<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CourseWork.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CourseWork.UI"
    xmlns:pages="clr-namespace:CourseWork.UI.Pages"
    Shell.TabBarIsVisible="False">

    <ShellContent
        Title="SignInPage"
        ContentTemplate="{DataTemplate pages:SignInPage}"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        Route="SignInPage"/>

    <ShellContent
        Title="TasksManager"
        ContentTemplate="{DataTemplate pages:TasksManager}"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        Route="TasksManager"/>
</Shell>
